<!DOCTYPE html>
<html lang="en">
  <% include ./partials/head %>

  <body>
    <% include ./partials/nav %>
    <div class="card-deck">
      <% if (posts.length> 0) { %> <% posts.forEach(data=> { %> <%
      console.log(data.id) %>
      <div class="deck-tile">
        <div class="card-body">
          <h5 class="card-title"><%= data.title %></h5>
          <p class="date"></p>
          <p class="card-text">
            <br />
            <%= data.post %>
          </p>

          <div>
            <a href="/get-one-post-by-id/<%= data.id%>">Show Comments</a>
          </div>
          <br />

          <p class="author">Author: <%= data.postOwner.username %></p>
        </div>
      </div>
      <% }) %> <% }else { %>
      <p>There's no posts yet!</p>
      <% } %>
    </div>
  </body>
</html>
